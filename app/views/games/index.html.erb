<h1>Listing games</h1>

<table>
  <tr>
    <th>Id</th>
    <th>First Player</th>
    <th>Second Player</th>
    <th>Board</th>
    <th>Turn</th>
    <th>Completed</th>
    <th>Accepted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.id %></td>
    <td><%= game.first_user ? game.first_user.email : '' %></td>
    <td><%= game.second_user ? game.second_user.email : '' %></td>
    <td><%= game.board %></td>
    <td><%= game.turn %></td>
    <td><%= game.completed %></td>
    <td><%= game.accepted %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

