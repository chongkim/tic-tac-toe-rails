<div id="ttt">
  <p id="notice"><%= notice %></p>
  <%= render :partial => 'shared/board_display' %>
  <%= link_to 'Back', games_path %>
</div>

<div id="legend_track">
  <div id="legend">
    <ul>
      <li id="first_player"><img src='/assets/oars.png' height="20" width="20"> <%= @first_player.name %></li>
      <li id="second_player"><img src='/assets/lifepreserver.png' height="20" width="20"> <%= @second_player.name %></li>
    </ul>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
  game_id = <%= @game.id %>;
  $(function() {
      set_players(
        {name: '<%= @first_player.name %>', email: '<%= @first_player.email %>'},
        {name: '<%= @second_player.name %>', email: '<%= @second_player.email %>'},
        {name: '<%= @current_player.name %>', email: '<%= @current_player.email %>'},
        '<%= @current_player_symbol %>');
      check_for_move();
  });
</script>
